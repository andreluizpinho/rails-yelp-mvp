<h1>Insert your Review</h1>

<% if @review.errors.any? %>
  <div class="alert alert-danger" role="alert">Please fix the issues below:</div>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.button :submit, "Create Review", class: "btn btn-primary" %>
<% end %>
